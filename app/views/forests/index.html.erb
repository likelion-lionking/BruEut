<p id="notice"><%= notice %></p>

<h1>Listing Forests</h1>
<% if user_signed_in? %>
<%=@user.id %>
<% if @user.id== 1 %>
<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @forests.each do |forest| %>
      <tr>
        <%= forest.censored %>
        <td><% if forest.censored == false %>

        <!-- <td><form action="maketure" method=post>
          <input type=hidden name=post_id value = <%= forest.id %> >
          <input type=submit value="Trufefy">
        </form> -->
        <%= link_to 'Trufefy', maketrue_path(forest) %>
        <% else %>
        true
         <% end %></td>
        <td><%= forest.content %></td>
        <td><%= link_to 'Show', forest %></td>
        <td><%= link_to 'Edit', edit_forest_path(forest) %></td>
        <td><%= link_to 'Destroy', forest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<% else %>
<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @forests.each do |forest| %>
      <tr>
        <% if forest.censored == true %>
        <td><%= forest.content %></td>
        <td><%= link_to 'Show', forest %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<br>
<%= link_to 'New Forest', new_forest_path %>
<% else %>
<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @forests.each do |forest| %>
      <tr>
        <% if forest.censored == true %>
        <td><%= forest.content %></td>
        <td><%= link_to 'Show', forest %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
